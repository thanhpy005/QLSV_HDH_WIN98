    public String getMaMon(String s)
    {
        String res = "";
        String[] a = s.split("\\s+");
        
        // Sá»¬A: Ä?Ã£ thay tháº¿ vÃ²ng láº·p for-each
        for(int k = 0; k < a.length; k++)
        {
            res += Character.toUpperCase(a[k].charAt(0));
        }
        return res;
        
    }
